<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/topper" />

        <healthcare.sajeel.com.healthcare.model.RoundedImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="10dp"
            android:id="@+id/dpimage"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar6" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Bold.ttf"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dptext"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dpimage"
            android:textSize="14dp"
            android:text="Profile Picture" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Regular.ttf"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fnametext"
            android:textSize="14dp"
            android:layout_below="@+id/dptext"
            android:text="First Name" />

        <healthcare.sajeel.com.healthcare.model.CustomEditText
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:hint="e.g. Muhammad"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textSize="14dp"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/fnameedit"
            android:layout_below="@+id/fnametext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_textfield" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Regular.ttf"
            android:layout_below="@+id/fnameedit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lnametext"
            android:textSize="14dp"
            android:text="Last Name" />

        <healthcare.sajeel.com.healthcare.model.CustomEditText
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:hint="e.g. Sajeel"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textSize="14dp"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/lnameedit"
            android:layout_below="@+id/lnametext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_textfield" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Regular.ttf"
            android:layout_below="@+id/lnameedit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailtext"
            android:textSize="14dp"
            android:text="Email" />

        <healthcare.sajeel.com.healthcare.model.CustomEditText
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:hint="e.g. domain@example.com"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textSize="14dp"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/emailedit"
            android:layout_below="@+id/emailtext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_textfield" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Regular.ttf"
            android:layout_below="@+id/emailedit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordtext"
            android:textSize="14dp"
            android:text="Password" />

        <healthcare.sajeel.com.healthcare.model.CustomEditText
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:hint="************"
            android:paddingTop="8dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textSize="14dp"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/passwordedit"
            android:layout_below="@+id/passwordtext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_textfield" />

        <healthcare.sajeel.com.healthcare.model.CustomTextView
            app:customFont="fonts/Lato-Regular.ttf"
            android:layout_below="@+id/passwordedit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cpasswordtext"
            android:textSize="14dp"
            android:text="Confirm Password" />

        <healthcare.sajeel.com.healthcare.model.CustomEditText
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:hint="************"
            android:paddingTop="8dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textSize="14dp"
            android:textColorHint="#333333"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/cpasswordedit"
            android:layout_below="@+id/cpasswordtext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_textfield" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/morelayout"
            android:layout_below="@+id/cpasswordedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <healthcare.sajeel.com.healthcare.model.CustomTextView
                app:customFont="fonts/Lato-Regular.ttf"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/streettext"
                android:textSize="14dp"
                android:text="Street" />

            <healthcare.sajeel.com.healthcare.model.CustomEditText
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:hint="e.g. 123 Street"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textColorHint="#333333"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/streetedit"
                android:layout_below="@+id/streettext"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_textfield" />

            <healthcare.sajeel.com.healthcare.model.CustomTextView
                app:customFont="fonts/Lato-Regular.ttf"
                android:layout_below="@+id/streetedit"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postaltext"
                android:textSize="14dp"
                android:text="Zip" />

            <healthcare.sajeel.com.healthcare.model.CustomEditText
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:hint="e.g. 97579"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textColorHint="#333333"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/postaledit"
                android:layout_below="@+id/postaltext"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_textfield" />

            <healthcare.sajeel.com.healthcare.model.CustomTextView
                app:customFont="fonts/Lato-Regular.ttf"
                android:layout_below="@+id/postaledit"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/citytext"
                android:textSize="14dp"
                android:text="City" />

            <healthcare.sajeel.com.healthcare.model.CustomEditText
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:hint="e.g. Karachi"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textColorHint="#333333"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/cityedit"
                android:layout_below="@+id/citytext"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_textfield" />

            <healthcare.sajeel.com.healthcare.model.CustomTextView
                app:customFont="fonts/Lato-Regular.ttf"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/cityedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/regiontext"
                android:textSize="14dp"
                android:text="Province" />

            <healthcare.sajeel.com.healthcare.model.CustomEditText
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:hint="e.g. Sindh"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textColorHint="#333333"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/regionedit"
                android:layout_below="@+id/regiontext"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_textfield" />

            <healthcare.sajeel.com.healthcare.model.CustomTextView
                app:customFont="fonts/Lato-Regular.ttf"
                android:layout_below="@+id/regionedit"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countrytext"
                android:textSize="14dp"
                android:text="Country" />

            <healthcare.sajeel.com.healthcare.model.CustomEditText
                android:inputType="text"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:hint="e.g. Pakistan"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textColorHint="#333333"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/countryedit"
                android:layout_below="@+id/countrytext"
                android:layout_centerHorizontal="true"
                android:background="@drawable/input_textfield" />

        </RelativeLayout>

        <Button
            app:customFont="fonts/Lato-Regular.ttf"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/update"
            android:layout_marginEnd="50dp"
            android:layout_below="@+id/morelayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            tools:ignore="MissingPrefix"
            android:background="@color/colorPrimaryDark" />

    </RelativeLayout>
</ScrollView>
