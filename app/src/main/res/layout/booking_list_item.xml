<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="#0D0AA05B"
    android:layout_marginBottom="3dp"
    android:layout_height="60dp">

    <healthcare.sajeel.com.healthcare.model.CustomTextView
        app:customFont="fonts/Lato-Bold.ttf"
        android:layout_centerVertical="true"
        android:id="@+id/track_id"
        android:text="1"
        android:layout_marginLeft="65dp"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <healthcare.sajeel.com.healthcare.model.RoundedImageView
        android:id="@+id/physician_appointment_image"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar6"
        android:padding="6dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <healthcare.sajeel.com.healthcare.model.CustomTextView
        app:customFont="fonts/Lato-Bold.ttf"
        android:id="@+id/physician_appointment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="1"
        android:text="Dr. Farzana Shaukat"
        android:textColor="#222"
        android:textSize="14sp" />

    <healthcare.sajeel.com.healthcare.model.CustomTextView
        app:customFont="fonts/Lato-Bold.ttf"
        android:id="@+id/physician_appointment_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Andrologist"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <healthcare.sajeel.com.healthcare.model.CustomTextView
        app:customFont="fonts/Lato-Regular.ttf"
        android:id="@+id/physician_appointment_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Gulshan-e-Iqbal Block 13 D Karachi, Pakistan"
        android:textColor="#222"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/physician_appointment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="1sp"
        android:textStyle="italic" />

</RelativeLayout>